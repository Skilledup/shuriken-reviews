{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "shuriken-reviews/rating",
    "version": "2.0.0",
    "title": "Shuriken Rating",
    "category": "widgets",
    "icon": "star-filled",
    "description": "Display an interactive rating widget for collecting user ratings.",
    "keywords": ["rating", "review", "stars", "vote"],
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "padding": true,
            "margin": true
        }
    },
    "styles": [
        {
            "name": "classic",
            "label": "Classic",
            "isDefault": true
        },
        {
            "name": "card",
            "label": "Card"
        },
        {
            "name": "minimal",
            "label": "Minimal"
        },
        {
            "name": "dark",
            "label": "Dark"
        },
        {
            "name": "outlined",
            "label": "Outlined"
        }
    ],
    "textdomain": "shuriken-reviews",
    "attributes": {
        "ratingId": {
            "type": "number",
            "default": 0
        },
        "titleTag": {
            "type": "string",
            "default": "h2"
        },
        "anchorTag": {
            "type": "string",
            "default": ""
        },
        "accentColor": {
            "type": "string",
            "default": ""
        },
        "starColor": {
            "type": "string",
            "default": ""
        }
    },
    "editorScript": "shuriken-rating-editor",
    "style": "shuriken-reviews-frontend",
    "editorStyle": ["shuriken-reviews-frontend", "shuriken-rating-editor"]
}
